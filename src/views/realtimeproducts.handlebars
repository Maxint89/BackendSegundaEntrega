<h1 class="titles">Productos en tiempo real</h1>
<div id="containerProducts"></div>

<!-- Formulario para agregar nuevos productos -->
<form id="addProductForm" class="formulario-container">
    <h2 class="formulario-titulo">Agregar Producto</h2>
    <div class="formulario-field">
        <label for="title">Título</label>
        <input type="text" id="title" placeholder="ej. cerveza" required>
    </div>
    <div class="formulario-field">
        <label for="description">Descripción</label>
        <input type="text" id="description" placeholder="Escriba una breve descripcion" required>
    </div>
    <div class="formulario-field">
        <label for="price">Precio</label>
        <input type="number" id="price" placeholder="Defina un precio" required>
    </div>
    <div class="formulario-field">
        <label for="img">Imagen URL</label>
        <input type="text" id="img" placeholder="Indique la ruta de la imagen" required>
    </div>
    <div class="formulario-field">
        <label for="code">Código</label>
        <input type="text" id="code" placeholder="Debe ser codigo alfanumerico" required>
    </div>
    <div class="formulario-field">
        <label for="stock">Stock</label>
        <input type="number" id="stock" placeholder="Indique el stock" required>
    </div>
    <div class="formulario-field">
        <label for="category">Categoría</label>
        <input type="text" id="category" placeholder="Indique a que categoria pertenece"
            required>
    </div>
    <button type="submit" class="formulario-button">Agregar Producto</button>
</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.min.js"></script>
<script src="js/main.js"></script>